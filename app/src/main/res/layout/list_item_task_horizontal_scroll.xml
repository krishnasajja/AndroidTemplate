<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/horizontalScrollHeaderTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Header text"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/color_11_dark_gray"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/horizontalScrollSubHeaderTextView"
        android:layout_below="@id/taskTemplateHeaderTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="sub Header text"
        android:textSize="16sp"
        android:textColor="@color/color_15_gray"
        android:visibility="gone"
        android:layout_marginBottom="5dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/horizontalScrollRecyclerView"
        android:layout_below="@id/horizontalScrollSubHeaderTextView"
        android:layout_marginTop="5dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>