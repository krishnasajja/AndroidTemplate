<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/taskNameTextView"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        tools:text="Pick Up Special Pet Diet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/taskDueDateTextView"
        android:layout_below="@id/taskNameTextView"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        tools:text="Due Tuesday @ 11:00am"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RadioButton
        android:id="@+id/markAsDoneRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/taskDueDateTextView"
        android:text="Mark as done"/>

    <TextView
        android:id="@+id/reminderTimeTextView"
        android:layout_below="@id/markAsDoneRadioButton"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        tools:text="Remind me @ 11:00am"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/reminderDayTextView"
        android:layout_below="@id/reminderTimeTextView"
        android:textColor="@color/color_15_gray"
        android:textSize="16sp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        tools:text="Today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>